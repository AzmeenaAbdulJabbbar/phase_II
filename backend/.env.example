# Phase II Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Connection (Neon PostgreSQL)
# Format: postgresql+asyncpg://user:password@host/database?ssl=require
DATABASE_URL=postgresql+asyncpg://user:password@ep-example.us-east-2.aws.neon.tech/neondb?ssl=require

# Better Auth Shared Secret (MUST match frontend configuration)
# Minimum 32 characters for security
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings (comma-separated origins for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173


